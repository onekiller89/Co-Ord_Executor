DISCORD_OUTPUT_CHANNEL_ID=1476146453121601639

# === YouTube Playlist Watcher ===
# YouTube Data API v3 key (Google Cloud Console → APIs & Services → Credentials)
YOUTUBE_API_KEY=
# Playlist ID for the "extract" playlist (from playlist URL: list=PLAYLIST_ID)
YOUTUBE_EXTRACT_PLAYLIST_ID=
# Playlist ID for "extract-completed" (videos move here after processing)
